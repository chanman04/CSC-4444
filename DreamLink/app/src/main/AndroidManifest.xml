<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="csc4444.mike.dreamlink" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".DreamLink">

        <activity
            android:name=".activities.SignupActivity"
            android:label="@string/app_name" >

        </activity>

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name=".activities.RecordDream"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name=".activities.DreamInterpreter"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name=".activities.DreamLog"
            android:label="@string/app_name" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>

        <activity
            android:name=".activities.DreamDictionary"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name=".activities.DreamTerm"
            android:label="@string/app_name" >
        </activity>

    </application>

</manifest>
